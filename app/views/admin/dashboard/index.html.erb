<% content_for :title, "Dashboard - Admin" %>

<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">Dashboard</h1>
      <p class="text-gray-400">Overview of your software catalog</p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Add New Software", new_admin_software_path, 
          class: "btn-primary" %>
      <%= link_to "Manage Categories", admin_categories_path, 
          class: "btn-secondary" %>
    </div>
  </div>
</div>

<!-- Stats Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
  <!-- Total Software -->
  <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
    <div class="flex items-center">
      <div class="p-2 bg-blue-600 bg-opacity-20 rounded-lg">
        <svg class="w-6 h-6 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-400">Total Software</p>
        <p class="text-2xl font-bold text-white"><%= @stats[:total_softwares] %></p>
      </div>
    </div>
  </div>

  <!-- Published Software -->
  <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
    <div class="flex items-center">
      <div class="p-2 bg-green-600 bg-opacity-20 rounded-lg">
        <svg class="w-6 h-6 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-400">Published</p>
        <p class="text-2xl font-bold text-white"><%= @stats[:published_softwares] %></p>
      </div>
    </div>
  </div>

  <!-- Categories -->
  <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
    <div class="flex items-center">
      <div class="p-2 bg-purple-600 bg-opacity-20 rounded-lg">
        <svg class="w-6 h-6 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
          <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z"/>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-400">Categories</p>
        <p class="text-2xl font-bold text-white"><%= @stats[:total_categories] %></p>
      </div>
    </div>
  </div>

  <!-- Total Downloads -->
  <div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
    <div class="flex items-center">
      <div class="p-2 bg-orange-600 bg-opacity-20 rounded-lg">
        <svg class="w-6 h-6 text-orange-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 011 1v1a1 1 0 01-1 1H4a1 1 0 01-1-1v-1zM6.293 6.707a1 1 0 010-1.414l3-3a1 1 0 011.414 0l3 3a1 1 0 01-1.414 1.414L11 5.414V13a1 1 0 11-2 0V5.414L7.707 6.707a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-400">Total Downloads</p>
        <p class="text-2xl font-bold text-white"><%= number_with_delimiter(@stats[:total_downloads]) %></p>
      </div>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Recent Downloads -->
  <div class="bg-gray-800 rounded-lg border border-gray-700">
    <div class="p-6 border-b border-gray-700">
      <h2 class="text-xl font-semibold text-white">Recent Downloads</h2>
    </div>
    <div class="p-6">
      <% if @stats[:recent_downloads].any? %>
        <div class="space-y-4">
          <% @stats[:recent_downloads].each do |download| %>
            <div class="flex items-center justify-between py-3 border-b border-gray-700 last:border-b-0">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-gray-700 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 011 1v1a1 1 0 01-1 1H4a1 1 0 01-1-1v-1zM6.293 6.707a1 1 0 010-1.414l3-3a1 1 0 011.414 0l3 3a1 1 0 01-1.414 1.414L11 5.414V13a1 1 0 11-2 0V5.414L7.707 6.707a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-white">
                    <%= link_to download.software.title, admin_software_path(download.software), 
                        class: "hover:text-green-400 transition-colors" %>
                  </p>
                  <p class="text-xs text-gray-500">
                    <%= time_ago_in_words(download.created_at) %> ago
                  </p>
                </div>
              </div>
              <div class="text-right">
                <p class="text-sm text-gray-400">v<%= download.software.version %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="w-12 h-12 mx-auto text-gray-600 mb-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 011 1v1a1 1 0 01-1 1H4a1 1 0 01-1-1v-1zM6.293 6.707a1 1 0 010-1.414l3-3a1 1 0 011.414 0l3 3a1 1 0 01-1.414 1.414L11 5.414V13a1 1 0 11-2 0V5.414L7.707 6.707a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
          </svg>
          <p class="text-gray-500">No downloads yet</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Popular Software -->
  <div class="bg-gray-800 rounded-lg border border-gray-700">
    <div class="p-6 border-b border-gray-700">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-white">Popular Software</h2>
        <%= link_to "View All", admin_softwares_path, 
            class: "text-sm text-green-400 hover:text-green-300 transition-colors" %>
      </div>
    </div>
    <div class="p-6">
      <% if @stats[:popular_softwares].any? %>
        <div class="space-y-4">
          <% @stats[:popular_softwares].each_with_index do |software, index| %>
            <div class="flex items-center space-x-3 py-3 border-b border-gray-700 last:border-b-0">
              <div class="flex-shrink-0 w-6 text-center">
                <span class="text-sm font-medium text-gray-400">#<%= index + 1 %></span>
              </div>
              <% if software.featured_image.attached? %>
                <%= image_tag software.featured_image.variant(resize_to_fill: [40, 40]), 
                    alt: software.title, 
                    class: "w-10 h-10 object-cover rounded" %>
              <% else %>
                <div class="w-10 h-10 bg-gray-700 rounded flex items-center justify-center">
                  <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
                  </svg>
                </div>
              <% end %>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-white truncate">
                  <%= link_to software.title, admin_software_path(software), 
                      class: "hover:text-green-400 transition-colors" %>
                </p>
                <p class="text-xs text-gray-500">
                  <%= software.category.name %> • v<%= software.version %>
                </p>
              </div>
              <div class="text-right">
                <p class="text-sm font-medium text-gray-300">
                  <%= number_with_delimiter(software.downloads_count) %>
                </p>
                <p class="text-xs text-gray-500">downloads</p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="w-12 h-12 mx-auto text-gray-600 mb-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
          </svg>
          <p class="text-gray-500">No software available</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Recent Software -->
<div class="mt-8">
  <div class="bg-gray-800 rounded-lg border border-gray-700">
    <div class="p-6 border-b border-gray-700">
      <div class="flex items-center justify-between">
        <h2 class="text-xl font-semibold text-white">Recently Added Software</h2>
        <%= link_to "Manage All", admin_softwares_path, 
            class: "text-sm text-green-400 hover:text-green-300 transition-colors" %>
      </div>
    </div>
    <div class="p-6">
      <% if @stats[:recent_softwares].any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @stats[:recent_softwares].each do |software| %>
            <div class="bg-gray-700 rounded-lg p-4 border border-gray-600 hover:border-gray-500 transition-colors">
              <div class="flex items-start space-x-3">
                <% if software.featured_image.attached? %>
                  <%= image_tag software.featured_image.variant(resize_to_fill: [60, 60]), 
                      alt: software.title, 
                      class: "w-15 h-15 object-cover rounded" %>
                <% else %>
                  <div class="w-15 h-15 bg-gray-600 rounded flex items-center justify-center">
                    <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                <% end %>
                <div class="flex-1 min-w-0">
                  <h3 class="text-sm font-medium text-white truncate">
                    <%= link_to software.title, admin_software_path(software), 
                        class: "hover:text-green-400 transition-colors" %>
                  </h3>
                  <p class="text-xs text-gray-500 mb-2">
                    <%= software.category.name %> • v<%= software.version %>
                  </p>
                  <div class="flex items-center space-x-4 text-xs text-gray-400">
                    <span class="flex items-center">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 011 1v1a1 1 0 01-1 1H4a1 1 0 01-1-1v-1zM3 7a1 1 0 011-1h12a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V7zM4 3a1 1 0 000 2h12a1 1 0 100-2H4z" clip-rule="evenodd"/>
                      </svg>
                      <%= software.downloads_count %>
                    </span>
                    <span class="flex items-center">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L10 9.586V6z" clip-rule="evenodd"/>
                      </svg>
                      <%= time_ago_in_words(software.created_at) %> ago
                    </span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="w-16 h-16 mx-auto text-gray-600 mb-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
          </svg>
          <h3 class="text-lg font-medium text-gray-400 mb-2">No software yet</h3>
          <p class="text-gray-500 mb-6">Get started by adding your first software.</p>
          <%= link_to "Add Software", new_admin_software_path, 
              class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>