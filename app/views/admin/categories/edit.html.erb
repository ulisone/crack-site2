<% content_for :title, "Edit #{@category.name} - Admin" %>

<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">Edit Category</h1>
      <p class="text-gray-400">Editing: <span class="text-white font-medium"><%= @category.name %></span></p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "View Category", root_path(category_id: @category.id), 
          class: "text-green-400 hover:text-green-300 transition-colors",
          target: "_blank" %>
      <%= link_to "← Back to Categories", admin_categories_path, 
          class: "text-green-400 hover:text-green-300 transition-colors" %>
    </div>
  </div>
</div>

<%= render 'form', category: @category %>