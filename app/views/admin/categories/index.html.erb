<% content_for :title, "Category Management - Admin" %>

<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">Category Management</h1>
      <p class="text-gray-400">Organize software into categories</p>
    </div>
    <%= link_to "Add New Category", new_admin_category_path, 
        class: "btn-primary" %>
  </div>
</div>

<!-- Categories Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
  <% @categories.each do |category| %>
    <div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden hover:border-gray-600 transition-colors">
      <!-- Category Header -->
      <div class="p-6 pb-4">
        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <h3 class="text-xl font-semibold text-white mb-2">
              <%= link_to category.name, admin_category_path(category), 
                  class: "hover:text-green-400 transition-colors" %>
            </h3>
            <% if category.description.present? %>
              <p class="text-gray-400 text-sm leading-relaxed">
                <%= truncate(category.description, length: 100) %>
              </p>
            <% end %>
          </div>
          
          <!-- Actions Dropdown -->
          <div class="relative ml-4">
            <button type="button" class="text-gray-400 hover:text-white" onclick="toggleDropdown('dropdown-<%= category.id %>')">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"/>
              </svg>
            </button>
            <div id="dropdown-<%= category.id %>" class="hidden absolute right-0 mt-2 w-48 bg-gray-700 rounded-md shadow-lg z-10 border border-gray-600">
              <div class="py-1">
                <%= link_to "View Details", admin_category_path(category), 
                    class: "block px-4 py-2 text-sm text-gray-300 hover:bg-gray-600 hover:text-white" %>
                <%= link_to "Edit Category", edit_admin_category_path(category), 
                    class: "block px-4 py-2 text-sm text-gray-300 hover:bg-gray-600 hover:text-white" %>
                <%= link_to "View Public", root_path(category_id: category.id), 
                    class: "block px-4 py-2 text-sm text-gray-300 hover:bg-gray-600 hover:text-white",
                    target: "_blank" %>
                <div class="border-t border-gray-600 my-1"></div>
                <%= link_to "Delete", admin_category_path(category), 
                    method: :delete,
                    data: { confirm: "Are you sure? This will also affect all software in this category." },
                    class: "block px-4 py-2 text-sm text-red-400 hover:bg-gray-600 hover:text-red-300" %>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Category Stats -->
        <div class="flex items-center space-x-6 text-sm text-gray-400 mb-4">
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
            </svg>
            <%= pluralize(category.softwares_count, 'software') %>
          </div>
          
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L10 9.586V6z" clip-rule="evenodd"/>
            </svg>
            Position #<%= category.position %>
          </div>
        </div>
      </div>
      
      <!-- Recent Software in Category -->
      <div class="px-6 pb-6">
        <% recent_software = category.softwares.published.limit(3) %>
        <% if recent_software.any? %>
          <div class="space-y-2">
            <h4 class="text-sm font-medium text-gray-400 mb-2">Recent Software:</h4>
            <% recent_software.each do |software| %>
              <div class="flex items-center space-x-2 text-sm">
                <% if software.featured_image.attached? %>
                  <%= image_tag software.featured_image.variant(resize_to_fill: [24, 24]), 
                      alt: software.title, 
                      class: "w-6 h-6 object-cover rounded" %>
                <% else %>
                  <div class="w-6 h-6 bg-gray-600 rounded flex items-center justify-center">
                    <svg class="w-3 h-3 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                <% end %>
                <span class="text-gray-300 truncate">
                  <%= link_to software.title, admin_software_path(software), 
                      class: "hover:text-green-400 transition-colors" %>
                </span>
                <span class="text-gray-500 text-xs">v<%= software.version %></span>
              </div>
            <% end %>
            
            <% if category.softwares_count > 3 %>
              <div class="pt-2 border-t border-gray-700">
                <%= link_to "View all #{category.softwares_count} software â†’", 
                    admin_softwares_path(category_id: category.id), 
                    class: "text-xs text-green-400 hover:text-green-300 transition-colors" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <svg class="w-8 h-8 mx-auto text-gray-600 mb-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
            </svg>
            <p class="text-gray-500 text-sm">No software yet</p>
            <%= link_to "Add Software", new_admin_software_path(category_id: category.id), 
                class: "text-xs text-green-400 hover:text-green-300 transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Summary Stats -->
<div class="bg-gray-800 rounded-lg p-6 border border-gray-700">
  <h2 class="text-xl font-semibold text-white mb-4">Category Overview</h2>
  
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="text-center">
      <p class="text-3xl font-bold text-white"><%= @categories.count %></p>
      <p class="text-sm text-gray-400">Total Categories</p>
    </div>
    
    <div class="text-center">
      <p class="text-3xl font-bold text-green-400"><%= @categories.sum(&:softwares_count) %></p>
      <p class="text-sm text-gray-400">Total Software</p>
    </div>
    
    <div class="text-center">
      <p class="text-3xl font-bold text-blue-400">
        <%= @categories.where('softwares_count > 0').count %>
      </p>
      <p class="text-sm text-gray-400">Active Categories</p>
    </div>
    
    <div class="text-center">
      <p class="text-3xl font-bold text-yellow-400">
        <%= @categories.where(softwares_count: 0).count %>
      </p>
      <p class="text-sm text-gray-400">Empty Categories</p>
    </div>
  </div>
</div>

<!-- JavaScript for dropdown functionality -->
<script>
function toggleDropdown(dropdownId) {
  const dropdown = document.getElementById(dropdownId);
  const allDropdowns = document.querySelectorAll('[id^="dropdown-"]');
  
  // Close all other dropdowns
  allDropdowns.forEach(d => {
    if (d.id !== dropdownId) {
      d.classList.add('hidden');
    }
  });
  
  // Toggle current dropdown
  dropdown.classList.toggle('hidden');
}

// Close dropdowns when clicking outside
document.addEventListener('click', function(event) {
  if (!event.target.closest('button')) {
    const allDropdowns = document.querySelectorAll('[id^="dropdown-"]');
    allDropdowns.forEach(d => d.classList.add('hidden'));
  }
});
</script>