<% content_for :title, "Edit #{@software.title} - Admin" %>

<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">Edit Software</h1>
      <p class="text-gray-400">Editing: <span class="text-white font-medium"><%= @software.title %></span></p>
    </div>
    <div class="flex space-x-3">
      <%= link_to "View Software", software_path(@software), 
          class: "text-green-400 hover:text-green-300 transition-colors",
          target: "_blank" %>
      <%= link_to "← Back to Software", admin_softwares_path, 
          class: "text-green-400 hover:text-green-300 transition-colors" %>
    </div>
  </div>
</div>

<%= render 'form', software: @software %>