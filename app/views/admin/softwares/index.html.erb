<% content_for :title, "Software Management - Admin" %>

<!-- Page Header -->
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">Software Management</h1>
      <p class="text-gray-400">Manage all software in your catalog</p>
    </div>
    <%= link_to "Add New Software", new_admin_software_path, 
        class: "btn-primary" %>
  </div>
</div>

<!-- Filters and Search -->
<div class="bg-gray-800 rounded-lg p-6 border border-gray-700 mb-6">
  <%= form_with url: admin_softwares_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
    <div class="flex-1 min-w-64">
      <%= form.text_field :search, 
          placeholder: "Search software...", 
          value: params[:search],
          class: "w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" %>
    </div>
    
    <div class="min-w-48">
      <%= form.select :category_id, 
          options_from_collection_for_select(@categories, :id, :name, params[:category_id]),
          { prompt: "All Categories" },
          { class: "w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" } %>
    </div>
    
    <div class="min-w-32">
      <%= form.select :status, 
          [["All Status", ""], ["Published", "published"], ["Draft", "draft"]],
          { selected: params[:status] },
          { class: "w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent" } %>
    </div>
    
    <div class="flex space-x-2">
      <%= form.submit "Filter", class: "btn-primary" %>
      <% if params[:search].present? || params[:category_id].present? || params[:status].present? %>
        <%= link_to "Clear", admin_softwares_path, class: "btn-secondary" %>
      <% end %>
    </div>
  <% end %>
</div>

<!-- Software Table -->
<div class="bg-gray-800 rounded-lg border border-gray-700 overflow-hidden">
  <% if @softwares.any? %>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              Software
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              Category
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              Version
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              Status
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              Downloads
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
              Created
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-700">
          <% @softwares.each do |software| %>
            <tr class="hover:bg-gray-700 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <% if software.featured_image.attached? %>
                    <%= image_tag software.featured_image.variant(resize_to_fill: [40, 40]), 
                        alt: software.title, 
                        class: "w-10 h-10 object-cover rounded" %>
                  <% else %>
                    <div class="w-10 h-10 bg-gray-600 rounded flex items-center justify-center">
                      <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  <% end %>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-white">
                      <%= link_to software.title, admin_software_path(software), 
                          class: "hover:text-green-400 transition-colors" %>
                    </div>
                    <% if software.developer.present? %>
                      <div class="text-sm text-gray-500">
                        by <%= software.developer %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-600 text-white">
                  <%= software.category.name %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                v<%= software.version %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if software.published? %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                    Published
                  </span>
                <% else %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                    Draft
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                <%= number_with_delimiter(software.downloads_count) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= software.created_at.strftime("%m/%d/%Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex items-center justify-end space-x-2">
                  <%= link_to "View", software_path(software), 
                      class: "text-green-400 hover:text-green-300 transition-colors",
                      target: "_blank" %>
                  <%= link_to "Edit", edit_admin_software_path(software), 
                      class: "text-blue-400 hover:text-blue-300 transition-colors" %>
                  <%= link_to "Delete", admin_software_path(software), 
                      method: :delete,
                      data: { 
                        confirm: "Are you sure you want to delete '#{software.title}'? This action cannot be undone." 
                      },
                      class: "text-red-400 hover:text-red-300 transition-colors" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-16">
      <div class="max-w-md mx-auto">
        <svg class="w-24 h-24 mx-auto text-gray-600 mb-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm8 0a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h4a1 1 0 011 1v2a1 1 0 01-1 1h-4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
        </svg>
        <h3 class="text-xl font-semibold text-gray-400 mb-2">
          <% if params[:search].present? %>
            No software found
          <% else %>
            No software yet
          <% end %>
        </h3>
        <p class="text-gray-500 mb-6">
          <% if params[:search].present? %>
            Try adjusting your search criteria or clearing the filters.
          <% else %>
            Get started by adding your first software to the catalog.
          <% end %>
        </p>
        <% unless params[:search].present? %>
          <%= link_to "Add Software", new_admin_software_path, 
              class: "btn-primary" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Quick Stats -->
<div class="mt-6 grid grid-cols-1 md:grid-cols-4 gap-4">
  <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
    <div class="text-center">
      <p class="text-2xl font-bold text-white"><%= @softwares.count %></p>
      <p class="text-sm text-gray-400">
        <%= params[:search].present? || params[:category_id].present? || params[:status].present? ? "Filtered" : "Total" %> Software
      </p>
    </div>
  </div>
  
  <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
    <div class="text-center">
      <p class="text-2xl font-bold text-green-400"><%= @softwares.select(&:published?).count %></p>
      <p class="text-sm text-gray-400">Published</p>
    </div>
  </div>
  
  <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
    <div class="text-center">
      <p class="text-2xl font-bold text-yellow-400"><%= @softwares.reject(&:published?).count %></p>
      <p class="text-sm text-gray-400">Draft</p>
    </div>
  </div>
  
  <div class="bg-gray-800 rounded-lg p-4 border border-gray-700">
    <div class="text-center">
      <p class="text-2xl font-bold text-blue-400"><%= @softwares.sum(&:downloads_count) %></p>
      <p class="text-sm text-gray-400">Total Downloads</p>
    </div>
  </div>
</div>